@page
@model Klothing.Pages.OrderDetailPage.IndexModel

@{
    ViewData["Title"] = "Index";
    decimal? total = 0;
}

<div class="page">

<h1>Order Number: @Html.DisplayFor(model => model.OrderDetail[0].Order.Id)</h1>

<table class="table">
    <thead>
        <tr>
           <th>

           </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Price)
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderDetail) {
        <tr>
            <td>
               <img class="cart" src="~/img/@item.Product.Image">
            </td>
            <td>
                <div>
                  <h5>@Html.DisplayFor(modelItem => item.Product.Name)</h5>
                  <p>@Html.DisplayFor(modelItem => item.Product.Description)</p>
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
                <td>
                    @{
                        decimal? itemTotal = item.Quantity * item.Price;
                        total += itemTotal;
                    }
                    $@(item.Price * item.Quantity)

                </td>
        </tr>
}
    </tbody>
</table>
<h3>
    $@total
</h3>
</div>

