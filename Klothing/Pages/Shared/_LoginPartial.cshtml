@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" id="user">
        <img id="userIcon" src="/img//user.png">
    </li>
   
        <p id="username">@User.Identity?.Name!</p>
    

        <li class="nav-item" id="myorder">
            <a class="nav-link text-dark" asp-area="" asp-page="/OrderPage/Index">My Orders</a>
        </li>
       
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/CartItemPage/Index">Cart</a>
        </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>

}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
     
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
